<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1"
    app:layoutDescription="@xml/activity_4_scene">


    <ImageView
        android:id="@+id/imageViewBike"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_directions_bike_24"
        android:contentDescription="@string/bike"/>

    <ImageView
        android:id="@+id/imageViewCar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        android:contentDescription="@string/car"/>

    <ImageView
        android:id="@+id/imageViewRun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_directions_run_24"
        android:contentDescription="@string/run"/>


</androidx.constraintlayout.motion.widget.MotionLayout>
